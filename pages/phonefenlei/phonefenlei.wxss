.left{
  width: 210rpx;
  height: 210rpx;
 overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}
.classlist{
  border: 1rpx solid #ddd;
  width: 95%;
  margin: 10rpx auto;
  display: flex;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.classtitile{
  height: 120rpx;
}
.right{
  flex-grow: 0.8;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.haspay{
  font-size: 0.8rem;
  color: #B3B3B3;
}
.buybtn{
  width: 170rpx;
  text-align: center;
  background: #417DF7;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  border-radius:25rpx; 
  font-size: 0.8rem;
  display: inline-block;
  margin-top: 35rpx;
}
.rightBottom{
  display: flex;
  /* justify-content: space-between; */
}
.nowprice,.oldprice{
  display: inline-block;
  height: 84rpx;
  line-height:84rpx; 
}
.nowprice{
  font-size: 1.1rem;
  color: #417DF7;
}
.oldprice{
  font-size: 0.8rem;
  text-decoration: line-through;
  color: #B3B3B3;
}
.price{
width: 270rpx;

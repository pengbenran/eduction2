}
.fengrungoodlist{
  width: 95%;
  margin: 10rpx auto;
  overflow: hidden;
  background: #fff;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
}
image{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.fengrungoodlistImg{
  width: 250rpx;
  height: 250rpx;

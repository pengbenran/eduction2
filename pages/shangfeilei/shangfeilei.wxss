.left{
  width: 250rpx;
  height: 250rpx;
 overflow: hidden;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}
.classlist{
  border: 1rpx solid #ddd;
  width: 95%;
  margin: 10rpx auto;
  display: flex;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}
.classtitile{
  /* height: 180rpx; */
   font-size:0.9em;
  width: 380rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  height: 80rpx;
}
.right{
  flex-grow: 1;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.haspay{
  font-size: 0.8rem;
  color: #B3B3B3;
}
.buybtn{
  width: 120rpx;
  text-align: center;
  background: #3494ff;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  border-radius:25rpx; 
  font-size: 0.8rem;
  display: inline-block;
}
.rightBottom{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.price{
  /* margin-top: 10rpx; */
  text-align: right;
  padding-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  color: #3494ff;
  margin-top: 10rpx;
}
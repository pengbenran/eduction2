/* 一起拼团css */
.spell-down{
  background: #fff;
  height: 300rpx;
  display: flex;
  margin-top: 15rpx;
}
.spell-img{
  width: 100%;
  height: 300rpx;
  
}
.spell-left{
display: flex;
justify-content: center;
align-items: center;
width:30%;
}
.spell-left image{
 width:80%;
 height: 80%
}
.spell-right{
 padding: 30rpx 0;
 display: flex;
 flex-direction: column;
 flex: 1;
 justify-content: space-around;
}
.spell-top{
  width: 70%;
  height: 100rpx;
  font-size: 14px;
}
.spell-conten{
  width: 30%;
  font-size: 12px;
}
.spell-bottom{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.spetext-one{
 font-size: 12px;
 color: red;
}
.spetext-two{
  margin-left: 20rpx;
  font-size: 12px;
  color: #ccc;
  text-decoration:line-through;
}
.spell-btn{
  width: 35%;
  background:#3497ff;
  height: 60rpx;
  border-radius: 45rpx;
  line-height:60rpx;
  color:white;
  font-size: 12px;
}
.spe-left{
 width:56%;
 
